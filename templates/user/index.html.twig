{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mb-4">Gestion des utilisateurs</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        {% if users is empty %}
            <div class="alert alert-info">
                Aucun utilisateur trouvé.
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Email</th>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Rôles</th>
                            <th>Créé le</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.lastName }}</td>
                                <td>{{ user.fistName }}</td>
                                <td>
                                    {% for role in user.roles %}
                                        <span class="badge bg-info">{{ role }}</span>
                                    {% endfor %}
                                </td>
                                <td>{{ user.createdAt|date('d/m/Y H:i') }}</td>
                                <td>
                                    {% if user.enabled %}
                                        <span class="badge bg-success">Activé</span>
                                    {% else %}
                                        <span class="badge bg-danger">Désactivé</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if user == app.user %}
                                        <button type="button" class="btn btn-sm btn-secondary" disabled title="Vous ne pouvez pas modifier votre compte">
                                            Toggle
                                        </button>
                                        <button type="button" class="btn btn-sm btn-secondary" disabled title="Vous ne pouvez pas supprimer votre compte">
                                            Supprimer
                                        </button>
                                    {% else %}
                                        <form action="{{ path('app_user_toggle', {'id': user.id}) }}" method="POST" style="display: inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ user.id) }}">
                                            <button type="submit" class="btn btn-sm {% if user.enabled %}btn-warning{% else %}btn-success{% endif %}">
                                                {% if user.enabled %}Désactiver{% else %}Activer{% endif %}
                                            </button>
                                        </form>
                                        <form action="{{ path('app_user_delete', {'id': user.id}) }}" method="POST" style="display: inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr?')">Supprimer</button>
                                        </form>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}

        <a href="{{ path('app_home') }}" class="btn btn-secondary mt-3">Retour à l'accueil</a>
    </div>
{% endblock %}
