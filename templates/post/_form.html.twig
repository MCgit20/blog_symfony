{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    <div class="mb-3">
        {{ form_row(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Titre de l\'article'}}) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.content, {'attr': {'class': 'form-control', 'rows': 8, 'placeholder': 'Contenu de l\'article'}}) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.category, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.picture, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.publishedAt, {'attr': {'class': 'form-control'}}) }}
    </div>
    <button type="submit" class="btn btn-primary btn-lg">{{ button_label|default('Sauvegarder') }}</button>
    <a href="{{ path('app_post_index') }}" class="btn btn-secondary btn-lg">Annuler</a>
{{ form_end(form) }}
