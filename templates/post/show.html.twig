{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Article Principal -->
                <article class="card shadow mb-5">
                    <div class="card-body p-5">
                        <h1 class="h2 mb-3">{{ post.title }}</h1>
                        <div class="text-muted small mb-4">
                            <strong>Publi√© le</strong> {{ post.publishedAt|date('d/m/Y √† H:i') }} 
                            <strong>par</strong> {{ post.author.fistName }} {{ post.author.lastName }}
                            <span class="ms-2"><span class="badge bg-primary">{{ post.category.name }}</span></span>
                        </div>
                        {% if post.picture %}
                            <img src="{{ asset('uploads/' ~ post.picture) }}" class="img-fluid rounded mb-4" alt="{{ post.title }}">
                        {% endif %}
                        <div class="content lh-lg">
                            {{ post.content|nl2br }}
                        </div>
                    </div>
                </article>

                <!-- Section Commentaires -->
                <section class="comments">
                    {% set approvedComments = [] %}
                    {% for comment in post.comments %}
                        {% if comment.isIsApproved %}
                            {% set approvedComments = approvedComments|merge([comment]) %}
                        {% endif %}
                    {% endfor %}

                    <h3 class="h4 mb-4">üí¨ Commentaires ({{ approvedComments|length }})</h3>

                    {% if is_granted('ROLE_USER') %}
                        <!-- Formulaire d'ajout de commentaire -->
                        <div class="card shadow mb-4">
                            <div class="card-body p-4">
                                <h5 class="card-title mb-3">Ajouter un commentaire</h5>
                                <div class="alert alert-info" role="alert">
                                    ‚ÑπÔ∏è Votre commentaire sera publi√© apr√®s approbation par un administrateur.
                                </div>
                                {{ form_start(commentForm, {'attr': {'novalidate': 'novalidate'}}) }}
                                <div class="mb-3">
                                    {{ form_widget(commentForm.content, {'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Votre commentaire...'}}) }}
                                </div>
                                <button type="submit" class="btn btn-primary btn-lg">‚úçÔ∏è Publier</button>
                                {{ form_end(commentForm) }}
                            </div>
                        </div>
                    {% else %}
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            <strong>Vous n'√™tes pas connect√©</strong><br>
                            <a href="{{ path('app_login') }}" class="btn btn-sm btn-outline-info mt-2">Connectez-vous</a> pour ajouter un commentaire.
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endif %}

                    <!-- Liste des commentaires approuv√©s -->
                    {% if approvedComments|length > 0 %}
                        {% for comment in approvedComments %}
                            <div class="card mb-3 border-left border-primary" style="border-left-width: 4px;">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <strong class="text-dark">{{ comment.author.fistName }} {{ comment.author.lastName }}</strong>
                                            {% if comment.author == post.author %}
                                                <span class="badge bg-success ms-2">Auteur</span>
                                            {% endif %}
                                        </div>
                                        <small class="text-muted">{{ comment.createdAt|date('d/m/Y √† H:i') }}</small>
                                    </div>
                                    <p class="mb-0 text-muted">{{ comment.content }}</p>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="alert alert-light border text-center py-5">
                            <p class="text-muted mb-0">Aucun commentaire pour le moment. Soyez le premier √† commenter !</p>
                        </div>
                    {% endif %}
                </section>

                <!-- Retour -->
                <div class="mt-5 text-center">
                    <a href="{{ path('app_home') }}" class="btn btn-secondary btn-lg">‚¨ÖÔ∏è Retour √† l'accueil</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}