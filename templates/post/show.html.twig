{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <article>
        <h1 class="mb-3">{{ post.title }}</h1>
        <div class="text-muted mb-4">
            Publié le {{ post.publishedAt|date('d/m/Y à H:i') }}
            par {{ post.author.fistName }} {{ post.author.lastName }}
            dans <span class="badge bg-secondary">{{ post.category.name }}</span>
        </div>
        {% if post.picture %}
            <img src="{{ asset('uploads/' ~ post.picture) }}" class="img-fluid rounded mb-4" alt="{{ post.title }}">
        {% endif %}
        <div class="content">
            {{ post.content|nl2br }}
        </div>
    </article>

    <hr class="my-5">

    <!-- Section Commentaires -->
    <section class="comments">
        <h3 class="mb-4">Commentaires ({{ post.comments|length }})</h3>

        {% if is_granted('ROLE_USER') %}
            <!-- Formulaire d'ajout de commentaire -->
            <div class="card mb-4">
                <div class="card-body">
                    {{ form_start(commentForm) }}
                    {{ form_row(commentForm.content, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                    <button type="submit" class="btn btn-primary">Ajouter un commentaire</button>
                    {{ form_end(commentForm) }}
                </div>
            </div>
        {% else %}
            <div class="alert alert-info">
                <a href="{{ path('app_login') }}">Connectez-vous</a> pour ajouter un commentaire.
            </div>
        {% endif %}

        <!-- Liste des commentaires -->
        {% for comment in post.comments %}
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <strong>{{ comment.author.fistName }} {{ comment.author.lastName }}</strong>
                        <small class="text-muted">{{ comment.createdAt|date('d/m/Y à H:i') }}</small>
                    </div>
                    <p class="mt-2">{{ comment.content }}</p>
                </div>
            </div>
        {% else %}
            <p class="text-muted">Aucun commentaire pour le moment. Soyez le premier à commenter !</p>
        {% endfor %}
    </section>
{% endblock %}