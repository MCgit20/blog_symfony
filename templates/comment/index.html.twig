{% extends 'base.html.twig' %}

{% block title %}Gestion des Commentaires{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="h2 mb-0">üí¨ Gestion des Commentaires</h1>
                    <a href="{{ path('app_comment_new') }}" class="btn btn-lg btn-success">‚ûï Cr√©er un commentaire</a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-hover table-white">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Contenu</th>
                                <th>Auteur</th>
                                <th>Date</th>
                                <th>Statut</th>
                                <th style="width: 250px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for comment in comments %}
                            <tr>
                                <td><span class="badge bg-secondary">{{ comment.id }}</span></td>
                                <td>{{ comment.content}}</td>
                                <td><small>{{ comment.author.fistName }} {{ comment.author.lastName }}</small></td>
                                <td>{{ comment.createdAt ? comment.createdAt|date('d/m/Y H:i') : '-' }}</td>
                                <td>
                                    {% if comment.isIsApproved %}
                                        <span class="badge bg-success">‚úì Approuv√©</span>
                                    {% else %}
                                        <span class="badge bg-warning text-dark">‚ö†Ô∏è En attente</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="d-flex gap-2 flex-wrap">
                                        <a href="{{ path('app_comment_show', {'id': comment.id}) }}" class="btn btn-sm btn-info">üëÅÔ∏è Voir</a>
                                        {% if not comment.isIsApproved %}
                                            <form method="POST" action="{{ path('app_comment_approve', {'id': comment.id}) }}" style="display: inline;">
                                                <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ comment.id) }}">
                                                <button type="submit" class="btn btn-sm btn-success">‚úì Approuver</button>
                                            </form>
                                        {% else %}
                                            <form method="POST" action="{{ path('app_comment_disapprove', {'id': comment.id}) }}" style="display: inline;">
                                                <input type="hidden" name="_token" value="{{ csrf_token('disapprove' ~ comment.id) }}">
                                                <button type="submit" class="btn btn-sm btn-warning">‚úó D√©sapprouver</button>
                                            </form>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center text-muted">Aucun commentaire trouv√©</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
