                            </div>
                            <div class="col-6">
                                <a href="{{ path('app_comment_index') }}" class="btn btn-lg btn-secondary w-100">‚¨ÖÔ∏è Retour</a>
                            </div>
                        </div>

                        {{ include('comment/_delete_form.html.twig') }}
